<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5sp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <TextView
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="first Name"
        android:elevation="4dp"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_luu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/lutendo" />

        <TextView
            android:id="@+id/info_luu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="first Name" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_itu"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/itu" />

        <TextView
            android:id="@+id/info_itu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="first Name"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_koketso"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/koki" />

        <TextView
            android:id="@+id/info_koketso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="first Name"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_lindo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/info_lindo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="first Name"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_salome"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/info_salume"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="first Name" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profile_thabang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_pic" />

        <TextView
            android:id="@+id/info_thabang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="first Name"/>

    </LinearLayout>

    </LinearLayout>

</ScrollView>