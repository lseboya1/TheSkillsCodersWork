<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Name"
                android:editable="false"
                android:textColor="@android:color/black"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Last Name"
                android:editable="false"
                android:textColor="@android:color/black"
                android:textAlignment="center" />

        </LinearLayout>


        <EditText
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address during leave"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:editable="false"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone number during leave"
            android:inputType="phone"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:editable="false"
            android:textAlignment="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#20000000"
            android:paddingTop="5sp"
            android:layout_marginTop="10sp"
            android:paddingBottom="5sp">

            <TextView
                android:text="Type of Leave :"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#20000000"
            android:paddingTop="5sp"
            android:paddingBottom="5sp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Condition of payment :"
                android:textColor="@android:color/black"
                android:textSize="17dp" />

            <Spinner
                android:id="@+id/simpleSpinnerPayments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

            <TextView
                android:id="@+id/date_from"
                android:text="From:   "
                android:layout_marginTop="20dp"
                android:textSize="17sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/date_to"
                android:text="To     :   "
                android:textSize="17sp"
                android:layout_marginTop="20dp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/number_of_days"
            android:text="Number Of Days :"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Approve"
            android:text="Approve"
            android:padding="20dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="17sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Disapprove"
            android:text="Decline"
            android:padding="20dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:layout_marginTop="17sp"/>
    </LinearLayout>

</ScrollView>